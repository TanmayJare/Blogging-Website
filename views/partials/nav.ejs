<!-- Custom CSS for navbar enhancements -->
<style>
  .navbar .nav-link {
    transition: all 0.2s ease;
  }
  
  .navbar .nav-link:hover {
    background-color: rgba(255, 255, 255, 0.1);
    transform: translateY(-1px);
  }
  
  .navbar .nav-link.active {
    background-color: rgba(255, 255, 255, 0.15);
    font-weight: 500;
  }
  
  .dropdown-menu {
    border-radius: 0.5rem;
  }
  
  .dropdown-item {
    border-radius: 0.3rem;
    padding: 0.5rem 1rem;
    margin: 0.1rem 0;
  }
  
  .dropdown-item:hover {
    background-color: rgba(13, 110, 253, 0.1);
  }
  
  .dropdown-item.text-danger:hover {
    background-color: rgba(220, 53, 69, 0.1);
  }
  
  .toast {
    border-radius: 0.5rem;
    border: none;
    box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.2);
    min-width: 280px;
    opacity: 1;
  }
  
  .toast-header {
    border-top-left-radius: 0.5rem;
    border-top-right-radius: 0.5rem;
    padding: 0.75rem 1rem;
  }
  
  .toast-body {
    padding: 0.75rem 1rem;
    background-color: #fff;
    border-bottom-left-radius: 0.5rem;
    border-bottom-right-radius: 0.5rem;
  }
  
  /* Specific toast styling */
  .error-toast .toast-body {
    border-left: 4px solid #dc3545;
  }
  
  .success-toast .toast-body {
    border-left: 4px solid #198754;
  }
  
  .info-toast .toast-body {
    border-left: 4px solid #0dcaf0;
  }
  
  /* Animate toasts */
  @keyframes slideInRight {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }
  
  @keyframes fadeOut {
    from {
      opacity: 1;
    }
    to {
      opacity: 0;
    }
  }
  
  .toast.show {
    animation: slideInRight 0.4s ease-out forwards;
  }
  
  .toast.hide {
    animation: fadeOut 0.3s ease-in forwards;
  }
</style>

<!-- Add JavaScript to auto-dismiss toasts after 5 seconds -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize all toasts
    var toastElList = [].slice.call(document.querySelectorAll('.toast'));
    var toastList = toastElList.map(function(toastEl) {
      var toast = new bootstrap.Toast(toastEl, { 
        autohide: true,
        delay: 5000
      });
      
      // Add event listener to add hide animation class before hiding
      toastEl.addEventListener('hide.bs.toast', function() {
        toastEl.classList.add('hide');
      });
      
      return toast;
    });
    
    // Activate all toasts
    toastList.forEach(toast => toast.show());
  });
</script>